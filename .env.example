# LLM Conversation App - Environment Configuration
# Copy this file to .env and fill in your values
# GUI settings will override these defaults if provided

# ============================================================================
# Model A Configuration
# ============================================================================

# API Key for Model A (required)
MODEL_A_API_KEY=your_api_key_here

# Base URL for Model A API endpoint (optional, leave empty for default OpenAI)
MODEL_A_BASE_URL=

# Model name/identifier for Model A
MODEL_A_NAME=gpt-4.1-mini

# Nickname for Model A (appears in conversation)
MODEL_A_NICKNAME=Alice

# Persona/behavioral description for Model A
MODEL_A_PERSONA=You are a thoughtful and analytical assistant who enjoys exploring ideas in depth.

# ============================================================================
# Model B Configuration
# ============================================================================

# API Key for Model B (required)
MODEL_B_API_KEY=your_api_key_here

# Base URL for Model B API endpoint (optional, leave empty for default OpenAI)
MODEL_B_BASE_URL=

# Model name/identifier for Model B
MODEL_B_NAME=gpt-4.1-nano

# Nickname for Model B (appears in conversation)
MODEL_B_NICKNAME=Bob

# Persona/behavioral description for Model B
MODEL_B_PERSONA=You are a creative and curious assistant who likes to ask questions and challenge assumptions.

# ============================================================================
# Conversation Settings
# ============================================================================

# Default discussion topic
DISCUSSION_TOPIC=The impact of artificial intelligence on society

# Maximum number of conversation turns (2-50)
MAX_TURNS=10

# Temperature for response generation (0.0-2.0)
TEMPERATURE=0.7

# Delay between turns in seconds (helps prevent rate limiting)
TURN_DELAY=1.0

# System prompt file (contains instructions for conversational dynamics)
SYSTEM_PROMPT_FILE=system_prompt.txt

# ============================================================================
# Legacy/Fallback Configuration
# ============================================================================

# Fallback API key if model-specific keys are not set
OPENAI_API_KEY=your_api_key_here

